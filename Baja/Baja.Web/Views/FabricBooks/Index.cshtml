@model IEnumerable<Baja.Domain.Fabric.FabricBook>

@{
    ViewBag.Title = "Index";
}

<h2>Fabric Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="row">
    <div class="col s7 offset-s1">
        <table class="highlight centered responsive-table bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FabricCategories.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FabricCategories.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

